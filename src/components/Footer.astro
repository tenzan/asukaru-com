---
import { getLocaleFromUrl, t, getLocalePath } from "../i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const year = new Date().getFullYear();
---

<footer class="border-t border-gray-200 mt-24">
  <div class="max-w-5xl mx-auto px-6 py-12">
    <div class="flex flex-col sm:flex-row justify-between gap-8">
      <div>
        <p class="font-semibold">合同会社飛鳥瑠</p>
      </div>
      <div class="flex flex-col sm:items-end gap-2 text-sm">
        <a
          href={getLocalePath(locale, "/privacy")}
          class="text-gray-500 hover:text-gray-900 transition-colors"
        >
          {t(locale, "footer.privacy")}
        </a>
        <a
          href={getLocalePath(locale, "/terms")}
          class="text-gray-500 hover:text-gray-900 transition-colors"
        >
          {t(locale, "footer.terms")}
        </a>
        <a
          href={getLocalePath(locale, "/tokushoho")}
          class="text-gray-500 hover:text-gray-900 transition-colors"
        >
          {t(locale, "footer.tokushoho")}
        </a>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-100 text-center text-xs text-gray-400">
      &copy; {year} {t(locale, "footer.copyright")}
    </div>
  </div>
</footer>
