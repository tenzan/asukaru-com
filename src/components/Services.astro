---
import { getLocaleFromUrl, t } from "../i18n/utils";

const locale = getLocaleFromUrl(Astro.url);

const services = [
  { title: t(locale, "services.custom.title"), description: t(locale, "services.custom.description") },
  { title: t(locale, "services.web.title"), description: t(locale, "services.web.description") },
  { title: t(locale, "services.ec.title"), description: t(locale, "services.ec.description") },
  { title: t(locale, "services.consulting.title"), description: t(locale, "services.consulting.description") },
];
---

<section id="services" class="py-24 bg-gray-50">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-3xl font-bold tracking-tight text-center">
      {t(locale, "services.title")}
    </h2>
    <div class="mt-16 grid sm:grid-cols-2 gap-8">
      {services.map((service) => (
        <div class="bg-white p-8 border border-gray-200">
          <h3 class="text-lg font-semibold">{service.title}</h3>
          <p class="mt-3 text-gray-600 leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
